<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SoundCloud Downloadable</title>
    <link rel="stylesheet" href="app.css">
    <link rel="stylesheet" href="foundation.css" />
    <script src="bower_components/jquery/dist/jquery.js"></script>
    <script src="bower_components/angular/angular.js"></script>
    <script src="bower_components/angular-resource/angular-resource.js"></script>
    <script src="//connect.soundcloud.com/sdk.js"></script>
  </head>

  <body>
    <header class="row">
      <h1 class="small-12 columns"><%= @username %></h1>
    </header>
    <summary class="row">
      <p class="small-12 columns">Following: <%= @following_count %></p>
    </summary>

  <!--     <iframe width="100%" height="400" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?visual=true&url=https%3A%2F%2Fapi.soundcloud.com%2Ftracks%2F188179113&show_artwork=true&oauth_token=1-123032-952969-3eaf6f299d08970b"></iframe> -->

    <header class="row">
      <h2 class="small-12 columns">Download Stream</h2>
    </header>
    <main class="row">
      <ul class="small-12 columns" id="stream">
      <% @downloadable_stream.each do |track| %>
        <li class="stream-list">
          <%= track %>
        </li>
      <% end %>
      </ul>
    </main>

    <script src="js/foundation/foundation.js"></script>
  </body>
</html>