<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>SoundCloud Downloadable</title>
    <link rel="stylesheet" href="app.css">
    <link rel="stylesheet" href="foundation.css" />
    <link rel="stylesheet" href="stroll.css" />
    <link rel="stylesheet" href="spinner.css" />
    <script src="bower_components/jquery/dist/jquery.js"></script>
    <script src="//connect.soundcloud.com/sdk.js"></script>
  </head>
  <body>
    <div class="page-container">
      <header class="row">
        <h1 class="small-12 columns"><%= @username %></h1>
      </header>
      <summary class="row">
        <p class="small-12 columns">Following: <%= @following_count %></p>
      </summary>
      <header class="row">
        <h2 class="small-6 columns">Download Stream</h2>
        <a class="small-6 columns" href="/" onclick="spinner();"><h6>Back</h6></a>
      </header>
      <div class="sk-spinner sk-spinner-fading-circle">
        <div class="sk-circle1 sk-circle"></div>
        <div class="sk-circle2 sk-circle"></div>
        <div class="sk-circle3 sk-circle"></div>
        <div class="sk-circle4 sk-circle"></div>
        <div class="sk-circle5 sk-circle"></div>
        <div class="sk-circle6 sk-circle"></div>
        <div class="sk-circle7 sk-circle"></div>
        <div class="sk-circle8 sk-circle"></div>
        <div class="sk-circle9 sk-circle"></div>
        <div class="sk-circle10 sk-circle"></div>
        <div class="sk-circle11 sk-circle"></div>
        <div class="sk-circle12 sk-circle"></div>
      </div>
      <main class="row">
        <section class="small-12 columns" id="main">
          <article>
            <ul class="fly-reverse" id="stream">
              <% @second_downloadable.each do |track| %>
                <li class="stream-list">
                  <%= track %>
                </li>
              <% end %>
            </ul>
          </article>
        </section>
      </main>
      <aside class="row">
        <a class="small-12 columns" href="/" onclick="spinner();"><h6>Back</h6></a>
      </aside>
    </div>
    <script src="js/app.js"></script>
    <script src="js/app.js"></script>
    <script src="js/foundation/foundation.js"></script>
    <script src="js/stroll.min.js"></script>
    <script>
      stroll.bind('#main ul');
    </script>
    <script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>
  </body>
</html>